# Webhook Server Environment Configuration
# Copy this file to .env and fill in the actual values

# ==============================================
# APPLICATION SETTINGS
# ==============================================

# Server port (default: 6688)
PORT=6688

# Node.js environment (development/production)
NODE_ENV=production

# CORS origin
# DEVELOPMENT: használj * (minden origin engedélyezett)
# PRODUCTION: használj konkrét domain-t! (BIZTONSÁGI KÖVETELMÉNY)
# Példa production: CORS_ORIGIN=https://webhook.yourdomain.com
# Több domain: CORS_ORIGIN=https://webhook.yourdomain.com,https://admin.yourdomain.com
CORS_ORIGIN=*

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MySQL connection settings
DB_HOST=mysql
DB_PORT=3306
DB_NAME=webhook_db
DB_USER=webhook_user

# Database passwords (REQUIRED - generate secure passwords)
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_PASSWORD=your_secure_user_password_here

# ==============================================
# SECURITY SETTINGS
# ==============================================

# JWT secret for admin authentication (REQUIRED - min 32 chars / 256-bit)
# Use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_min_32_characters

# Webhook secret for HMAC validation (REQUIRED - min 16 chars)
# Use: openssl rand -base64 24
WEBHOOK_SECRET=your_webhook_secret_here_min_16_characters

# Sensitive settings encryption key (REQUIRED - 256-bit AES encryption)
# Use: openssl rand -hex 32
# This encrypts SSO client secrets and other sensitive values in database
# IMPORTANT: This key MUST remain constant across deployments!
SETTINGS_ENCRYPTION_KEY=your_64_hex_character_encryption_key_here_use_openssl_rand_hex_32

# ==============================================
# EXAMPLE SECURE VALUES (DO NOT USE IN PRODUCTION)
# ==============================================
# Generate your own secure values using:
# - openssl rand -base64 32  (for secrets)
# - Strong password generator (for database passwords)
#
# MYSQL_ROOT_PASSWORD=MySecureRootPass123!@#
# MYSQL_PASSWORD=MySecureUserPass456$%^
# JWT_SECRET=AbCdEfGhIjKlMnOpQrStUvWxYz123456789
# WEBHOOK_SECRET=ZyXwVuTsRqPoNmLkJiHgFeDcBa987654321

# ==============================================
# OPTIONAL SETTINGS
# ==============================================

# Rate limiting (requests per 15 minutes per IP)
RATE_LIMIT_MAX=100

# Request body size limit
BODY_SIZE_LIMIT=10mb

# Session/Token expiration
JWT_EXPIRES_IN=24h

# Logging level
# info     - Alapértelmezett production szint (események, státusz)
# debug    - Részletes logok minden műveletre (fejlesztéshez)
# warn     - Csak figyelmeztetések és hibák
# error    - Csak kritikus hibák
LOG_LEVEL=info